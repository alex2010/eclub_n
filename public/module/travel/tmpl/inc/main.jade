doctype html

block script

html
    head
        title= title

        include ../../../../../views/inc/meta

        block style
        block head
    body
        .headerWrapper
            header#header.container
                h1 TRAVEL IN CHINA
                    img(src= f.resPath(c.code, 'images/logo_03.jpg'))

        block slide

        .topLine
            .container
                .row
                    h2.col-md-2
                        | China /
                        a(href='/')= city.title
                    .col-md-10
                        block headLine
                            if headTitle
                                h3.pull-left= headTitle

                            if headMenu == 'sns'
                                include share
                            else if _.isArray(headMenu)
                                ul.headMenu.list-inline.pull-right
                                    each it in headMenu
                                        li
                                            a(href= it.href)= it.title

        #content.container

            #home.row
                nav.col-md-2
                    - var mClass = 'menus row';
                    include ../../../../../views/inc/b3Menu
                .col-md-10.clearfix
                    block content

        .footerWrapper
            footer.container
                .row
                    .col-md-12
                        h4 Destination #{city.title}
                    each it in siteMap.sortBy('row')
                        ul.col-md-2
                            p
                                strong= it.title
                            if it.items && it.items.length
                                each ts in it.items
                                    - log(ts);
                                    if ts
                                        li!= f.link(ts)
        .bottomWrapper
            .container
                .row
                    .col-md-2
                        img()
                    ul.col-md-6.list-inline
                        each it in foot
                            li
                                a(href= it.href)= it.label

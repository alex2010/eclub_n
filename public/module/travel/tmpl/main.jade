doctype html

block script

html
    head
        title= title
        include ../../../../views/inc/meta
        block head
    body
        .headerWrapper
            #header.container
                h1 TRAVEL IN CHINA

        block slide

        .topLine
            .container
                .row
                    .col-md-2
                        | China / #{city.title}
                    .col-md-10
                        block headLine
                            if headTitle
                                .pull-left= headTitle

                            if headMenu == 'sns'
                                include inc/share
                            else if _.isArray(headMenu)
                                ul.headMenu.inline.pull-right
                                    each it in headMenu
                                        li
                                            a(href= it.href)= it.label

        #content.container

            #home.row
                nav.col-md-2
                    - var mClass = 'menus';
                    include ../../../../views/inc/b3Menu
                .col-md-10
                    block content

        .footerWrapper
            .container
                #footer.row
                    .col-md-9
                        .footerBox
                            ul.sep
                                h3.c1 Top Ten Sights

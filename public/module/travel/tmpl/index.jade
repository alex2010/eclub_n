extends inc/main

block slide
    - var _slides = top.list;
    - var _sid = 'indexSlide';
    #indexSlide.carousel.slide(data-ride='carousel', style='height:600px')
        .carousel-inner
            each it,i in _slides
                .item(class= i == 0 ? 'active' : '', style='height:600px')
                    .opc
                    .container.text-center
                        .rel
                            h3 Beijing in For Seasons
                            .dropdown.btn.btn-default
                                a(data-toggle="dropdown",role='button')
                                    | Winter
                                    span.glyphicon.glyphicon-menu-down
                                ul.dropdown-menu
                                    li
                                        a Spring
                                    li
                                        a Summer
                                    li
                                        a Fall
                                    li
                                        a Winter
                    != f.imgItem(it, c.code, 'top')

                    .carousel-caption
                        h3
                            a(href= it.href)= it.title
                        p= it.subTitle
                        a.btn.btn-primary(href= it.href) See Details
        include ../../../../views/inc/slideBtn


block content

    .panel
        .panel-heading
            h2 Introducing #{city.title}
        .panel-body
            p= city.description

    .pBoxList
        .row
            if head && head.list
                each it in head.list
                    div(class= it.cls)
                        .pBox
                            a(href= it.href)
                                != f.imgItem(it, c.code, 'top')
                                .text
                                    h4= it.title
                                    p= it.subTitle
                include inc/tours


            .col-md-3
                .panel.pBox
                    .panel-heading
                        h3 Cars & Guides
                    ul.panel-body
                        each it in btm_cg
                            li
                                a(href= it.href)= it.title
            .col-md-3
                .panel.pBox
                    .panel-heading
                        h3 Maps
                    ul.panel-body
                        each it in btm_map
                            li
                                a(href= it.href)= it.title

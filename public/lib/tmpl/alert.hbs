<div class="alert alert-{{type}} {{#if closed}}alert-dismissable{{/if}}">
    {{#if closed}}
        <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
    {{/if}}
    {{#if icon}}
        {{icon icon 'i'}}
    {{/if}}
    {{#if title}}
        <strong>{{title}}</strong>
    {{/if}}
    {{{msg}}}
</div>